<div id ="index-wrapper">

  <div class="container-fluid">
    <div class="row">

      <% @projects.each do |f| %>

          <div class="col-sm-3" style="margin-top: 2em">
            <div class="well well-lg" style="background-color: burlywood">
              <%= f.name %>
            </div>
          </div>

      <% end %>

      <div class="col-sm-3" style="margin-top: 2em">

        <div class="well well-lg" data-toggle="popover" title="Neues Projekt anlegen" data-trigger="click"
             data-content='
                <%= form_tag("/new_project", method: "post", class: "project_form") do %>
                  <%= label_tag(:title, "Titel:") %>
                  <%= text_field_tag(:title) %>
                  <%= submit_tag("Anlegen") %>
                <% end %>'
             data-placement="bottom">Neues Projekt...
        </div>

      </div>
    </div>
  </div>

</div>

<script>
  $(document).ready(function(){
    $('[data-toggle="popover"]').popover({ html : true });
  });

  $(document).ready(function(){
    $('.project_form').submit(function( event ) {
      alert('ha');
      $('[data-toggle="popover"]').popover('hide');
      event.preventDefault();
    });
  });
</script>