<!DOCTYPE html>
<html>
  <head>
    <title>Scrumtool</title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="min-height: 60em">

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Scrum Tool</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to 'Projekte', root_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if !user_signed_in? %>
            <li>
              <%= link_to  new_user_registration_path do %>
              <span class="glyphicon glyphicon-user"> Anmelden</span><% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-log-in"> Einloggen</span><% end %>
            </li>
          <% end %>
          <% if user_signed_in? %>
            <li>
              <%= link_to destroy_user_session_path, method: :delete  do%>
              <span class="glyphicon glyphicon-log-out"> Abmelden</span><% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">

        <div class="col-sm-1"><p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>

        <div class="col-sm-10" style="min-height: 60em;border: groove">
          <%= yield %>
        </div>

        <div class="col-sm-1"></div>

      </div>
    </div>

  </body>
</html>
