<!DOCTYPE html>
<html>
  <head>
    <title>Scrumtool</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="min-height: 60em">

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Scrum Tool</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to 'Projekte', start_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#"><span class="glyphicon glyphicon-user"></span> Anmelden</a></li>
          <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Einloggen</a></li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">

        <div class="col-sm-1"></div>

        <div class="col-sm-10" style="min-height: 60em;border: groove">
          <%= yield %>
        </div>

        <div class="col-sm-1"></div>

      </div>
    </div>

  </body>
</html>
